@model PlayerViewModel

@{
    ViewBag.Title = "Player Details";
}

<h1>@ViewBag.Title</h1>
<section class="panel panel-default">
    <h3 class="panel-heading">@Model.Name</h3>
    <div class="panel-body">
        <form class="form-horizontal" method="POST" asp-antiforgery="true">
            <table class="table">
                <tr>
                    <td><label asp-for="Email"></label></td>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <td><label asp-for="Score"></label></td>
                    <td>@Model.Score</td>
                </tr>
                <tr>
                    <td><label asp-for="Team"></label></td>
                    <td>@Model.Team.Name</td>
                </tr>
                @for (var i = 0; i < Model.Competencies.Count; i++)
                {
                    <tr>
                        <td>    
                            <input asp-for="@Model.Competencies[i].Id" type="hidden" />
                            <input asp-for="@Model.Competencies[i].Active" />
                        </td>
                        <td>@Model.Competencies[i].Topic.DisplayName</td>
                        <td>@Model.Competencies[i].Score</td>
                    </tr>
                }
            </table>            
        </form>
    </div>
</section>


