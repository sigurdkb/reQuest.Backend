@model LoginViewModel

@{
    ViewBag.Title = "Logg inn";
}
<h1>@ViewBag.Title</h1>

            

<section class="panel panel-default">
    <h3 class="panel-heading"><span><img src="~/images/nokkelhull-48px.png" alt="feide logo"></span> Oppgi brukernavn:</h3>
    <div class="panel-body">
        
        <form method="post" asp-anti-forgery="true">
            <div class="text-warning" asp-validation-summary="ModelOnly"></div>
                
                <div class="container-fluid">                   
                   
                    <div class="row">
                        <div class="col-xs-9"><input class="form-control" asp-for="Username" /></div>                                          
                        <label class="col-3" asp-for="Username"></label>
                    </div>
                    <div class="row">
                        <div class="col-xs-12"><span class="text-warning" asp-validation-for="Username"></span></div>
                    </div>

                    <br>
                    
                    <div class="row">
                        <div class="col-xs-9"><input class="btn btn-success form-control" type="submit" value="Neste" /></div>
                    </div> 

                </div>
           
