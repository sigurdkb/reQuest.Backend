@model HomeViewModel
@{ ViewBag.Title = "Status"; }

    <div class="container">
        <div class="row">
            <div class="col-xs-8">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <section class="panel panel-default">
                    <div class="panel-heading">

                        <!--<canvas class="chart" id="cnv" width="400px" height="400px"></canvas>-->
                        Highscores
                    </div>

                    <div class="panel-body">
                        <table class="table">
                            <thead>
                                <th>Plassering</th>
                                <th>Navn</th>
                                <th>Poeng</th>
                            </thead>
                        @for (var i = 0; i < Model.Teams.Count(); i++) {
                        <tr class="success">
                            <td>
                                @(i+1)
                            </td>
                            <td>@Model.Teams[i].Name</td>
                            <td>@Model.Teams[i].Score</td>
                        </tr>
                        }

                        </table>

                    </div>

                </section>
                <section class="panel panel-default">
                    <div class="panel-heading">

                        <!--<canvas class="chart" id="cnv" width="400px" height="400px"></canvas>-->
                        Aktive foresp√∏rsler
                    </div>

                    <div class="panel-body">
                        <table class="table">
                            <thead>
                                <th asp-loc-id="Title">Tittel</th>
                                <th asp-loc-id="Topic.DisplayName">Emne</th>
                                <th asp-loc-id="Ends">Tidsfrist</th>
                            </thead>
                        @foreach (var quest in Model.Quests) {
                        <tr class="success">
                            <td>@quest.Title</td>
                            <td>@quest.Topic.DisplayName</td>
                            <td>@quest.Timeout.ToString("mm") minutter</td>
                        </tr>
                        }
                        </table>

                    </div>

                </section>
            </div>
        </div>
    </div>


    <!--<script src="~/js/showChart.js"></script>-->