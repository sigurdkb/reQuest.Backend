@model QuestCreateViewModel 
@{ ViewBag.Title = "Lag ny forespørsel"; }
<div>
    <h1>@ViewBag.Title</h1>
    <div>

        <form class="form-horizontal" method="POST" asp-antiforgery="true">
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Title"></label>
                <input class="col-sm-10 form-control input-lg" asp-for="Title" placeholder="Oppgi tittel" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Timeout"></label>
                <select class="form-control input-lg" asp-for="Timeout" asp-items="Model.AllTimeouts">
                    <option>Velg tidsfrist</option>
                </select>

                <span asp-validation-for="Timeout"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="TopicId"></label>
                <select class="form-control input-lg" asp-for="TopicId" asp-items="Model.AllTopics">
                    <option>Velg emne</option>
                </select>
                <span asp-validation-for="TopicId"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" asp-for="Description"></label>
                <textarea class="form-control input-lg" asp-for="Description" placeholder="Beskriv problemet"> </textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2">
                    <button class="btn btn-primary btn-lg" type="submit">Send forespørselen</button>
                </div>
            </div>

        </form>

    </div>